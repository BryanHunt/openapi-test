{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib":[
      "ES2020",
      "ES2020.BigInt",
      "ES2020.Promise",
      "ES2020.String"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "out": "artifacts/api-docs"
  }
}
